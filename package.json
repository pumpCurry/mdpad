{
  "name": "mdpad",
  "version": "1.0.0",
  "description": "GitHub-flavored Markdown editor with live preview and diff",
  "main": "src/main/main.js",
  "scripts": {
    "build:renderer": "esbuild src/renderer/index.js --bundle --outfile=dist/renderer/bundle.js --platform=browser --format=iife --loader:.css=css",
    "copy:assets": "node scripts/copy-assets.js",
    "prebuild:renderer": "node scripts/copy-assets.js",
    "start": "npm run build:renderer && electron .",
    "build": "npm run build:renderer && electron-builder --win dir",
    "build:zip": "npm run build:renderer && electron-builder --win dir && node scripts/create-zip.js",
    "dev": "npm run build:renderer && electron . --dev"
  },
  "author": "(C)pumpCurry, 5r4ce2",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "esbuild": "^0.24.0"
  },
  "dependencies": {
    "codemirror": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.1",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/search": "^6.5.8",
    "@replit/codemirror-indentation-markers": "^6.5.3",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-texmath": "^1.0.0",
    "highlight.js": "^11.11.0",
    "mermaid": "^11.4.0",
    "katex": "^0.16.11",
    "github-markdown-css": "^5.8.1",
    "diff": "^7.0.0",
    "dompurify": "^3.2.3"
  }
}
